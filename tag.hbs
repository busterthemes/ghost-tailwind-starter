{{!< default}}

<div class="container mx-auto p-4">

    <div class="flex flex-col items-center">

        {{#tag}}
        <header class="flex flex-col items-center sm:max-w-5xl py-4 ">

            <h1 class="text-5xl font-bold text-center py-2">{{name}}</h1>

            <p class="text-gray-500">
                {{#if description}}
                    {{description}}
                {{else}}
                    A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
                {{/if}}
            </p>

            {{#if feature_image}}
                <img class="pb-20" src="{{feature_image}}" alt="{{name}}" />
            {{/if}}

        </header>
        {{/tag}}

        <div>
        {{#foreach posts}}

            {{> "card"}} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

    </div>
</div>
